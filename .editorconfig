# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python - PEP 8 standard is 4 spaces
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML - 2 spaces is standard
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON - 2 spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Makefile - must use tabs
[Makefile]
indent_style = tab
